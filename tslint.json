{
  "defaultSeverity": "error",
  "extends": [
      "tslint:recommended"
  ],
  "rules": {
    "max-line-length": {
        "options": [120]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
        "severity": "off",
        "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
    },
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-snake-case",
        "allow-pascal-case"
      ]
    },
    "class-name": {
      
    }
  },
  "jsRules": {
      "max-line-length": {
          "options": [120]
      }
  }
}